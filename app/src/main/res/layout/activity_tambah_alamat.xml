<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar_baru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/_15sdp"
                android:padding="@dimen/_5sdp"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/colorPrimary">
                    <EditText
                        android:id="@+id/edt_nama"
                        android:paddingEnd="@dimen/_12sdp"
                        android:fontFamily="@font/mmedium"
                        android:textSize="@dimen/_12ssp"
                        android:drawablePadding="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nama Lengkap*"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/colorPrimary">
                    <EditText
                        android:id="@+id/edt_telpon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/_10sdp"
                        android:hint="Nomor telp*"
                        android:maxLength="13"
                        android:fontFamily="@font/mmedium"
                        android:textSize="@dimen/_12ssp"
                        android:inputType="number"
                        android:paddingEnd="@dimen/_12sdp" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/colorPrimary">
                    <EditText
                        android:id="@+id/edt_alamat"
                        android:paddingEnd="@dimen/_12sdp"
                        android:fontFamily="@font/mmedium"
                        android:textSize="@dimen/_12sdp"
                        android:drawablePadding="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Jalan, No, RT/RW*"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/colorPrimary">
                    <EditText
                        android:id="@+id/edt_type"
                        android:paddingEnd="@dimen/_12sdp"
                        android:fontFamily="@font/mmedium"
                        android:textSize="@dimen/_12ssp"
                        android:drawablePadding="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Rumah/Kos/Kantor*"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>
                <ProgressBar
                    android:id="@+id/pb"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/div_provinsi"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/colorPrimary">
                    <AutoCompleteTextView
                        android:id="@+id/spn_provinsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Pilih Provinsi*"
                        android:paddingEnd="@dimen/_12sdp"
                        android:fontFamily="@font/mmedium"
                        android:textSize="@dimen/_12ssp"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/div_kota"
                    android:visibility="gone"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/colorPrimary">
                    <AutoCompleteTextView
                        android:id="@+id/spn_kota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Kota*"
                        android:paddingEnd="@dimen/_12sdp"
                        android:fontFamily="@font/mmedium"
                        android:textSize="@dimen/_12ssp"
                        android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/colorPrimary">
                    <EditText
                        android:id="@+id/edt_kodePos"
                        android:paddingEnd="@dimen/_12sdp"
                        android:fontFamily="@font/mmedium"
                        android:textSize="@dimen/_12ssp"
                        android:maxLength="6"
                        android:drawablePadding="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Kode pos*"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:id="@+id/btn_simpan"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="@dimen/_15sdp"
                    android:background="@drawable/bg_btn_beli"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:text="Simpan"
                    android:textAllCaps="false"
                    android:fontFamily="@font/mmedium"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
        </ScrollView>
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/pb_register"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar_baru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:padding="@dimen/_10sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informasi Pembayaran"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/mmedium"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_3sdp"
                app:cardElevation="@dimen/_1sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_status"
                            android:fontFamily="@font/mmedium"
                            android:textSize="@dimen/_11ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Batas Akhir Pembayaran" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">
                        <TextView
                            android:id="@+id/tv_btsBayar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kamis, 02 Desember 2021, 13:45 WIB"
                            android:fontFamily="@font/mmedium"
                            android:textSize="@dimen/_11ssp"/>
                        <TextView
                            android:id="@+id/tv_tgl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_100sdp"
                            android:layout_alignParentEnd="true"
                            android:text="29:56:01"
                            android:fontFamily="@font/mmedium"
                            android:textSize="@dimen/_11ssp"
                            android:textColor="#FF0000"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="3dp"
                app:cardElevation="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_namaPenerima"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mmedium"
                            android:textSize="@dimen/_11ssp"
                            android:text="PT Marawis Almadinah Raya" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">
                        <TextView
                            android:id="@+id/tv_nama"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mmedium"
                            android:textSize="@dimen/_11ssp"
                            android:text="BNI Transfer" />
                        <ImageView
                            android:id="@+id/image_bank"
                            android:layout_alignParentRight="true"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/logo_bca" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">
                        <TextView
                            android:id="@+id/tv_nomorRekening"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:text="0931283129"
                            android:fontFamily="@font/mmedium"
                            android:textSize="@dimen/_11ssp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:fontFamily="@font/mmedium"
                                android:textSize="@dimen/_11ssp"
                                android:text="Salin"/>
                            <ImageView
                                android:id="@+id/btn_copyNoRek"
                                android:layout_width="@dimen/_24sdp"
                                android:layout_height="@dimen/_24sdp"
                                android:padding="@dimen/_4sdp"
                                app:srcCompat="@drawable/ic_baseline_content_copy_24" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardElevation="0dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_5sdp"
                    android:paddingVertical="@dimen/_5sdp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:text="Total Pembayaran"
                        android:fontFamily="@font/mmedium"
                        android:textSize="@dimen/_11ssp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_nominal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:text="Rp.10.000"
                            android:fontFamily="@font/mmedium"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/colorBlack" />
                        <ImageView
                            android:id="@+id/btn_copyNominal"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:padding="4dp"
                            app:srcCompat="@drawable/ic_baseline_content_copy_24" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/mmedium"
                android:textSize="@dimen/_11ssp"
                android:text="Pesananmu baru diterusan ke penjual setelah pembayaran terverifikasi." />
        </LinearLayout>
        <Button
            android:id="@+id/btn_cekStatus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_btn_beli"
            android:text="Cek status Pembayaran"
            android:textAllCaps="false"
            android:fontFamily="@font/mmedium"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>
</LinearLayout>
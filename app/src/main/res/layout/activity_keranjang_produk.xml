<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/div_header"
        android:visibility="gone"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/cb_allKeranjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/mmedium"
            android:text="Select All" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_55sdp"
            android:background="@color/color_300" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeToRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/div_footer">
                <RelativeLayout
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.recyclerview.widget.RecyclerView
                        android:visibility="gone"
                        android:id="@+id/rv_produk_keranjang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:spanCount="1"
                        tools:itemCount="6"
                        tools:listitem="@layout/item_keranjang"
                        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginHorizontal="@dimen/_15sdp" />
                    <LinearLayout
                        android:visibility="visible"
                        android:id="@+id/empty_keranjang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginVertical="@dimen/_100sdp"
                        android:gravity="center">
                        <ImageView
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_150sdp"
                            android:src="@drawable/keranjang_kosong"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Keranjang Anda Kosong"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/mmedium"/>
                        <TextView
                            android:padding="@dimen/_10sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="Dapatkan penawaran spesial dari kami untuk hari ini"
                            android:textSize="@dimen/_12ssp"
                            android:fontFamily="@font/mmedium"/>
                        <RelativeLayout
                            android:clickable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/btn_belanja"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/bg_btn_beli">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Mulai Belanja"
                                android:textColor="@color/colorWhite"
                                android:textSize="@dimen/_13sdp"
                                android:fontFamily="@font/mmedium" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/div_footer"
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_15sdp"
            android:paddingVertical="@dimen/_10sdp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:fontFamily="@font/mmedium"
                    android:textSize="@dimen/_12ssp"/>
                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Rp.0"
                    android:fontFamily="@font/mmedium"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_gravity="center"
                android:id="@+id/btn_bayar"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginStart="@dimen/_150sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/bg_btn_beli"
                android:focusable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Beli"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/mmedium" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_all_produk"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_below="@layout/toolbar_costume">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <androidx.cardview.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_produk_tb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/blank"/>
                    <TextView
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginHorizontal="5dp"
                        android:id="@+id/tv_nama_produk"
                        android:fontFamily="@font/mlight"
                        android:textStyle="bold"
                        android:textSize="@dimen/txtNormal"
                        android:textColor="@color/colorBlack"
                        android:lines="2"
                        android:maxLines="2"
                        android:ellipsize="marquee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Produk"/>
                    <TextView
                        android:visibility="invisible"
                        android:textSize="@dimen/txtNormal"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="5dp"
                        android:textColor="@color/colorGrey"
                        android:textStyle="bold"
                        android:fontFamily="@font/mlight"
                        android:id="@+id/tv_diskon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp.0"/>
                    <TextView
                        android:layout_marginBottom="20dp"
                        android:textSize="@dimen/txtNormal"
                        android:fontFamily="@font/mmedium"
                        android:layout_marginVertical="5dp"
                        android:layout_marginHorizontal="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/tv_harga_produk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp.0"/>
                </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>


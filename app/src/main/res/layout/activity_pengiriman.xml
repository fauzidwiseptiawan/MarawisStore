<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar_baru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="25dp"
                    app:srcCompat="@drawable/ic_baseline_home_work_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img1"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/mlight"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/txtNormal"
                    android:text="Pengiriman" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_toLeftOf="@+id/img2"
                    android:layout_toRightOf="@+id/img1"
                    android:background="@color/colorPremium" />
                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/ic_baseline_payment_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img2"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/mlight"
                    android:textSize="@dimen/txtNormal"
                    android:text="Metode Pembayaran" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_toStartOf="@+id/img3"
                    android:layout_toEndOf="@+id/img2"
                    android:background="@color/colorPremium" />
                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="25dp"
                    app:srcCompat="@drawable/ic_baseline_check_circle_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img3"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="22dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/mlight"
                    android:textSize="@dimen/txtNormal"
                    android:text="Selesai" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/div_barang"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Barang Yang Dibeli"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/mmedium"
                    android:textSize="@dimen/txtNormal" />
                <androidx.cardview.widget.CardView
                    android:id="@+id/div_produk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    app:cardElevation="0dp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_produk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Alamat Pengiriman"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/mmedium"
                android:textSize="@dimen/txtNormal" />
            <TextView
                android:id="@+id/div_kosong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/mlight"
                android:textSize="@dimen/txtNormal"
                android:text="* Pilih alamat pengiriman"
                android:visibility="visible" />
            <androidx.cardview.widget.CardView
                android:id="@+id/div_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/btn_edit"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_nama"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:ellipsize="marquee"
                            android:text="Nama"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/mmedium"
                            android:textSize="@dimen/txtNormal" />
                        <TextView
                            android:id="@+id/tv_telpon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0812345678"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/mlight"
                            android:textSize="@dimen/txtNormal" />
                        <TextView
                            android:id="@+id/tv_alamat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="alamat"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/mlight"
                            android:textSize="@dimen/txtNormal"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerInParent="true">
                <RelativeLayout
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/btn_tambah_alamat"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_btn_daftar"
                    android:focusable="true">
                    <TextView
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Tambah Alamat"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/mlight"
                        android:textSize="@dimen/txtNormal"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/div_metodePengiriman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Pilih Metode Pengiriman"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/mmedium"
                    android:textSize="@dimen/txtNormal" />
                <Spinner
                    android:id="@+id/spn_kurir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:textSize="13dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Metode Pengiriman"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/mmedium"
                    android:textSize="@dimen/txtNormal" />
                <TextView
                    android:id="@+id/tv_kosong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="* Pilih metode pengiriman"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/mlight"
                    android:textSize="@dimen/txtNormal"
                    android:visibility="gone" />
                <androidx.cardview.widget.CardView
                    android:id="@+id/div_pengiriman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    app:cardElevation="0dp">
                    <ProgressBar
                        android:id="@+id/pbt"
                        android:visibility="invisible"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp" />
                    <TextView
                        android:id="@+id/div_metode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/mlight"
                        android:textSize="@dimen/txtNormal"
                        android:text="* Pilih metode pengiriman"
                        android:visibility="visible" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_metode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Catatan Pengiriman"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/mmedium"
                android:textSize="@dimen/txtNormal" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_footer">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@null"
                    android:hint="Catatan untuk penjual (opsional)"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/mlight"
                    android:textSize="@dimen/txtNormal"/>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardElevation="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Belanja"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/mlight"
                            android:textSize="@dimen/txtNormal" />
                        <TextView
                            android:id="@+id/tv_totalBelanja"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Rp0"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/mmedium"
                            android:textSize="@dimen/txtNormal"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EAEAEA" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Biaya Pengiriman"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/mlight"
                            android:textSize="@dimen/txtNormal" />
                        <TextView
                            android:id="@+id/tv_ongkir"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Rp0"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/mmedium"
                            android:textSize="@dimen/txtNormal"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EAEAEA" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/mlight"
                            android:textSize="@dimen/txtNormal" />
                        <TextView
                            android:id="@+id/tv_total"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Rp0"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/mmedium"
                            android:textSize="@dimen/txtNormal" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/btn_bayar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="15dp"
                android:background="@drawable/bg_btn_beli"
                android:paddingHorizontal="15dp"
                android:text="Bayar"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/mmedium"
                android:textSize="@dimen/txtNormal"
                android:textAllCaps="false" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
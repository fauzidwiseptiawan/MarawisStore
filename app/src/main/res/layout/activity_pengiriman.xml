<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/toolbar_baru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    app:srcCompat="@drawable/ic_baseline_home_work_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img1"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:fontFamily="@font/mmedium"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_10ssp"
                    android:text="Pengiriman" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_toLeftOf="@+id/img2"
                    android:layout_toRightOf="@+id/img1"
                    android:background="@color/color_300" />
                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/ic_baseline_payment_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img2"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/mmedium"
                    android:textSize="@dimen/_10ssp"
                    android:text="Metode Pembayaran" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_toStartOf="@+id/img3"
                    android:layout_toEndOf="@+id/img2"
                    android:background="@color/color_300" />
                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_25sdp"
                    app:srcCompat="@drawable/ic_baseline_check_circle_24" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img3"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_22sdp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/mmedium"
                    android:textSize="@dimen/_10ssp"
                    android:text="Selesai" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/div_barang"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Barang Yang Dibeli"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:fontFamily="@font/mmedium"
                    android:textSize="@dimen/_12ssp" />
                <androidx.cardview.widget.CardView
                    android:id="@+id/div_produk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardElevation="@dimen/_1sdp">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_produk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                        app:spanCount="1"
                        tools:itemCount="3"
                        tools:listitem="@layout/item_pengiriman"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Alamat Pengiriman"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/mmedium"
                android:textSize="@dimen/_12ssp" />
            <TextView
                android:id="@+id/div_kosong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/mmedium"
                android:textSize="@dimen/_11ssp"
                android:text="* Pilih alamat pengiriman"
                android:visibility="visible" />
            <androidx.cardview.widget.CardView
                android:id="@+id/div_alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/btn_edit"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:orientation="vertical">
                        <TextView
                            android:padding="@dimen/_2sdp"
                            android:id="@+id/tv_nama"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:ellipsize="end"
                            android:text="Nama"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/mmedium"
                            android:textSize="@dimen/_12ssp" />
                        <TextView
                            android:padding="@dimen/_2sdp"
                            android:id="@+id/tv_telpon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0812345678"
                            android:fontFamily="@font/mmedium"
                            android:textSize="@dimen/_12ssp" />
                        <TextView
                            android:padding="@dimen/_2sdp"
                            android:id="@+id/tv_alamat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="alamat"
                            android:fontFamily="@font/mmedium"
                            android:textSize="@dimen/_12ssp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <RelativeLayout
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/btn_tambah_alamat"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/bg_btn_daftar"
                    android:focusable="true">
                    <TextView
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Tambah Alamat"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/mmedium"
                        android:textSize="@dimen/_13ssp"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/div_metodePengiriman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="Pilih Metode Pengiriman"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/mmedium"
                    android:textSize="@dimen/_12ssp" />
                <Spinner
                    android:id="@+id/spn_kurir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:textSize="@dimen/_12ssp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Metode Pengiriman"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/mmedium"
                    android:textSize="@dimen/_12ssp" />
                <TextView
                    android:id="@+id/div_metode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="* Pilih metode pengiriman"
                    android:fontFamily="@font/mmedium"
                    android:textSize="@dimen/_11ssp" />
                <androidx.cardview.widget.CardView
                    android:id="@+id/div_pengiriman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    app:cardElevation="1dp">
                    <ProgressBar
                        android:id="@+id/pbt"
                        android:visibility="invisible"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_metode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                        app:spanCount="1"
                        tools:itemCount="3"
                        tools:listitem="@layout/item_kurir"
                        android:visibility="visible"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Catatan Pengiriman"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:fontFamily="@font/mmedium"
                android:textSize="@dimen/_12ssp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_footer">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@null"
                    android:hint="Catatan untuk penjual (opsional)"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/mlight"
                    android:textSize="@dimen/_12ssp"/>
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardElevation="@dimen/_1sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Belanja"
                            android:fontFamily="@font/mmedium"
                            android:textSize="@dimen/_12ssp" />
                        <TextView
                            android:id="@+id/tv_totalBelanja"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/mmedium"
                            android:gravity="right"
                            android:text="Rp0"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/color_300" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Biaya Pengiriman"
                            android:fontFamily="@font/mmedium"
                            android:textSize="@dimen/_12ssp" />
                        <TextView
                            android:id="@+id/tv_ongkir"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Rp0"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/mmedium"
                            android:textSize="@dimen/_12ssp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/color_300" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10sdp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:fontFamily="@font/mmedium"
                            android:textSize="@dimen/_12ssp" />
                        <TextView
                            android:id="@+id/tv_total"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="Rp0"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/mmedium"
                            android:textSize="@dimen/_12ssp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/btn_bayar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="@dimen/_15sdp"
                android:background="@drawable/bg_btn_beli"
                android:paddingHorizontal="@dimen/_15sdp"
                android:text="Bayar"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/mmedium"
                android:textSize="@dimen/_13ssp"
                android:textAllCaps="false" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>